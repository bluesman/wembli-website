#pony-up-modal.pony-up-modal.modal.hide
	form.pony-up-modal-form(ng-submit="sendPonyUp()")
		.modal-header
			i.close.icon-remove(data-dismiss="modal")
			h2 Deposit Funds Into {{ponyUp.organizerFirstName}}'s Account
		.modal-body()
			#payment-information.payment-information
				.payment-information-wrapper
					#pony-up-payment
						.header
							i.icon-lock.icon-2x.pull-left
							h3 Secure Credit Card Payment
						.pony-up-alert.alert.alert-warning.clearfix(ng-show="error")
							.icon-warning-sign.icon-2x.pull-left
							.text.pull-left.one-line {{errorMessage}}
						.pony-up-alert.alert.alert-warning.clearfix(ng-show="formError")
							.icon-warning-sign.icon-2x.pull-left
							.text.pull-left Please make sure you've supplied a valid amount for the pony up.
						.pony-up-alert.alert.alert-success.clearfix(ng-show="success")
							.icon-ok-sign.icon-2x.pull-left.green
							.text.pull-left.one-line Woohoo! We successfully sent your pony up.
						.container.clearfix
							fieldset.pull-left
								.amount-to-pony-up.clearfix
									.header.pull-left Amount:&nbsp;
									.amount.pull-right
										strong {{ponyUp.total/100 | currency}}
								.control-group
									label.control-label Card Holder Name:
									.controls
										input(type="text", name="card_holder_name", ng-model="ponyUp.cardHolderName", placeholder="Card Holder Name", required,ng-disabled="success")
								.control-group
									label.control-label Credit Card Number:
									.controls
										input(type="text", name="credit_card_number", ng-model="ponyUp.creditCardNumber", placeholder="Credit Card Number", required,ng-disabled="success")
								.control-group
									.controls.pull-left
										label.control-label Month:
										select.month(ng-model="ponyUp.expirationDateMonth", name="expiration_date_month", required,ng-disabled="success")
											option(value="01") Jan
											option(value="02") Feb
											option(value="03") Mar
											option(value="04") Apr
											option(value="05") May
											option(value="06") Jun
											option(value="07") Jul
											option(value="08") Aug
											option(value="09") Sep
											option(value="10") Oct
											option(value="11") Nov
											option(value="12") Dec
									.controls.pull-left
										label.control-label Year:
										select.year(ng-model="ponyUp.expirationDateYear", name="expiration_date_year", required,ng-disabled="success")
											option(value="2013") 2013
											option(value="2014") 2014
											option(value="2015") 2015
											option(value="2016") 2016
											option(value="2017") 2017
											option(value="2018") 2018
											option(value="2019") 2019
											option(value="2020") 2020
								.control-group
									label.control-label Security Code:
									.controls
										input(type="text", name="cvv", ng-model="ponyUp.cvv", placeholder="Security Code", required,ng-disabled="success")
								.control-group
									label.control-label Postal Code:
									.controls
										input(type="text", name="postal_code", ng-model="ponyUp.postalCode", placeholder="Postal Code", required,ng-disabled="success")
							.right.pull-left
								.security-message
									.header.clearfix
										i.icon-lock.icon-2x.pull-left
										h4.pull-left Your security is our highest priority!
									.message
										span Wembli uses the latest security technology and has the ultimate safeguards in place to keep your information safe.  We never store bank account information on our servers. Please read our&nbsp;
										a(target="_blank",href="/terms-policies") Terms Of Use &amp; Privacy Policy&nbsp;
										span for more information about how we protect your security on the internet.
								.security-codes

		.modal-footer
			.control-group.pull-left
				.send-pony-up-button-container.clearfix(ng-hide="success")
					button.btn.btn-orange.btn-large.send-pony-up-button.pull-left(type="submit",ng-hide="sendPonyUpInProgress")
						.icon.icon-money.pull-left
						span &nbsp;Send Pony Up!
					button.btn.btn-orange.btn-large.send-pony-up-button.pull-left(ng-show="sendPonyUpInProgress", disabled)
						.icon.icon-cog.icon-spin.pull-left
						span &nbsp;Send Pony Up!
				button.btn.btn-large(data-dismiss="modal", ng-show="success") Close
			.security-logos.pull-left.clearfix
				.positive-ssl.pull-left
				.balanced-credit-card-logos.pull-left

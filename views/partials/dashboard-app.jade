#dashboard
	#dashboard-header
		.dropdown.pull-left
			a.toggle-selected.dropdown-toggle(data-toggle="dropdown", role="button",href="#")
				.cog-wrapper.pull-left
					i.icon-cog.icon-2x
				.welcome-message.helvetica.pull-left {{welcomeMessage}}
				.caret-wrapper.pull-left
					i.icon-caret-down
			ul.dropdown-menu(role="menu")
				li
					a.dashboard-dropdown-link(href="#dashboard",ng-click="routeDashboard($element)") Dashboard
					a.dashboard-dropdown-link(href="#settings",ng-click="routeDashboard(this)") Account Settings
					//- a.dashboard-dropdown-link(href="#preferences",ng-click="routeDashboard(this)") Plan Preferences
					a.dashboard-dropdown-link(href="#payment-information",ng-click="routeDashboard(this)") Payment Information
					a(href="/logout", ng-click="facebook.logout()") Log out

		.pull-right
			a#start-now.pull-left.btn.btn-primary.btn-large.segoe.wembli-sequence-link(href="/search")
				span START A NEW PLAN&nbsp;
				i.icon-double-angle-right
	#dashboard-body(ng-show="showDashboard")
		.alert
			div You must provide payment information if you want to be paid back.
			a(href="#") Click here to provide payment information.
		.dashboard-row
			a#planning.btn.dashboard-button(href="#planning-modal",data-toggle="modal")
				h3 Events You're Planning
				i.icon-beaker.icon-3x
			a#invited.btn.dashboard-button(href="#invited-modal",data-toggle="modal")
				h3 Events You're Invited To
				i.icon-group.icon-3x
		.dashboard-row
			a#contacts.btn.dashboard-button(href="#contacts-modal",data-toggle="modal")
				h3 Your Little Black Book
				i.icon-book.icon-3x
			a#archive.btn.dashboard-button(href="#archive-modal",data-toggle="modal")
				h3 Past Events
				i.icon-list-alt.icon-3x
	#settings.settings(ng-show="showSettings")
		#settings-wrapper
			h3 Account Settings
			#change-password.change-password
				form#change-password-form(novalidate, name="changePasswordForm")
					fieldset
						#error
							.error-text(ng-show="changePasswordForm.mismatch") Doh! Your passwords don't match
							.error-text(ng-show="changePasswordForm.tooShort") Doh! Your password must be at least 4 characters.
						#success
							.success-text(ng-show="changePasswordForm.success") Yes! You successfully changed your password.
						#password-group.control-group
							input(ng-model="changePassword.password",placeholder="NEW PASSWORD", type="password",value="",name="password",required)
						.control-group
							input(ng-model="changePassword.password2",placeholder="CONFIRM NEW PASSWORD", type="password",value="",name="password2",required)
					button.btn.btn-primary(ng-click="changePassword()") Change Password
	#preferences.preferences(ng-show="showPreferences") preferences
	#payment-information.payment-information(ng-show="showPaymentInformation")
		#payment-information-wrapper
			#merchant-account(ng-show="customer.merchantAccount")
				.merchant-account
					.row
						.name.span3.pull-left {{customer.merchantAccount.name}}
						.account-number.span3.pull-right {{customer.merchantAccount.account_number}}
					.bank {{customer.merchantAccount.bank_name}}
					.account-type Type: {{customer.merchantAccount.type}}
					.status
						span Status:&nbsp;
						span {{{true:"Valid",false:"Invalid"}[customer.merchantAccount.is_valid]}}

			#create-merchant-account(ng-hide="customer.merchantAccount")
				p In order for you to collect payments from your friends, you need to provide details about the bank account they will pay in to.
				form#create-merchant-account-form.form-horizontal(novalidate, name="createMerchantAccountForm")
					fieldset
						#error
							.error-text(ng-show="createMerchantAccount.error") {{createMerchantAccount.error}}
						legend Account Holder Information:
						.control-group
							label.control-label Full Name
							.controls
								input(ng-model="createMerchantAccount.accountHolderName",value="",placeholder="Account Holder Name",name="accountHolderName",required)
						.control-group
							label.control-label Phone Number
							.controls
								input(ng-model="createMerchantAccount.phoneNumber", value="",name="phoneNumber", placeholder="Phone Number",required)
						.control-group
							label.control-label Street Address
							.controls
								input(ng-model="createMerchantAccount.streetAddress", value="",name="streetAddress", placeholder="Street Address",required)
						.control-group
							label.control-label Postal Code
							.controls
								input(ng-model="createMerchantAccount.postalCode", value="",name="postalCode", placeholder="Postal Code",required)
						legend Bank Account Information:
						.control-group
							label.control-label Account Name
							.controls
								input(ng-model="createMerchantAccount.accountName", name="accountName", placeholder="Account Name",required)
						.control-group
							label.control-label Routing Number
							.controls
								input(ng-model="createMerchantAccount.routingNumber", name="routingNumber", placeholder="Routing Number",required)
						.control-group
							label.control-label Account Number
							.controls
								input(ng-model="createMerchantAccount.accountNumber", name="accountNumber", placeholder="Account Number",required)
						.control-group
							label.control-label Account Type
							.controls
								span.nullable
									select(ng-model="createMerchantAccount.accountType",name="accountType",required)
										option(value="") Select Account Type
										option(value="checking") CHECKING
										option(value="savings") SAVINGS
						.control-group
							.controls
								button.btn.btn-primary(ng-click="createMerchantAccount()") Create Account




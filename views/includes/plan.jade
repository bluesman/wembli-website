- var nav = planNav(req.session.visitor.context, req.session.plan.preferences.payment)
#plan-frame.init-plan-nav.clearfix(sections="#{nav.length}")
	#left.affix
		plan-nav
	#middle.plan-dashboard
		- if (req.session.visitor.context === 'organizer')
			#plan-dashboard.organizer-plan-dashboard
				//- no split has no pony up
				- if (req.session.plan.preferences.payment === 'no-split')
					organizer-rsvp-section
					organizer-cart-section
					organizer-itinerary-section
					section#section4.organizer-chatter-section.chatter-section.plan-section
						.header.clearfix
							h1.pull-left Chatter
						.body
							h3 Use this space to comment and share conversations about your upcoming event!
							plan-chatter
				- else
					organizer-rsvp-section
					organizer-cart-section
					organizer-pony-up-section
					organizer-itinerary-section
					section#section5.organizer-chatter-section.chatter-section.plan-section.hide
						.header.clearfix
							h1.pull-left Chatter
						.body
							h3 Use this space to comment and share conversations about your upcoming event!
							plan-chatter
		- if (req.session.visitor.context === 'friend')
			#plan-dashboard.friend-plan-dashboard
				- if (req.session.plan.preferences.payment === 'no-split')
					friend-rsvp-section
					friend-vote-section
					friend-invitees-section
					friend-itinerary-section
					section#section5.friend-chatter-section.chatter-section.plan-section.even
						.header.clearfix
							h1.pull-left Chatter
						.body
							h3 Use this space to comment and share conversations about your upcoming event!
							plan-chatter
				- else
					friend-rsvp-section
					friend-vote-section
					friend-invitees-section
					friend-pony-up-section
					friend-itinerary-section
					section#section6.friend-chatter-section.chatter-section.plan-section.even.hide
						.header.clearfix
							h1.pull-left Chatter
						.body
							h3 Use this space to comment and share conversations about your upcoming event!
							plan-chatter

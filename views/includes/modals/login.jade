#loginModal.modal.hide.fade
	.modal-header
		a.close(data-dismiss="modal") x
		h3 Login to Wembli:
	.modal-body
		.generalError.error.yellow
			- if((typeof errors !== 'undefined') && (errors.general) )
				| Incorrect Email or Password.
			- if((typeof errors !== 'undefined') && (errors.facebook) )
				| Unable to login through facebook.
		form#loginForm.form-horizontal.well(method="post",action="/login",enctype="application/x-www-form-urlencoded")
			fieldset
				.control-group
					label.control-label(for="email") Email:
					.controls
						input#email(type="text",value=(session.remember ? params.email : null),name="email")
				.control-group
					label.control-label(for="password") Password:
					.controls
						input(type="password",value="",name="password")
				.control-group
					.controls
						label.control-label(for="remember") Remember Me
							input(type="checkbox",name="remember",checked=params.remember)
				.form-actions
					a#forgotPasswordLink(href="#forgotPasswordModal",data-toggle="modal") forgot your password?
					button#loginSubmitButton.btn.btn-primary.btn-large Login
script
	$(document).ready(function() {
		$('#forgotPasswordLink').click(function(e) {
			$('#loginModal').modal('hide');
		});
	});
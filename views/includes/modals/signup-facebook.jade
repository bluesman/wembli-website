#fbSignupModal.modal.hide.fade
	.modal-header
		a.close(data-dismiss="modal") x
		h3 Sign Up For Wembli
	.modal-body
		p 
			span A great plan is always a work in progress.
			br
			span Enter your name, email and a password and we'll save your event plan.
		form#signup.well.form-horizontal(method="POST",action="/signup")
			fieldset
				.control-group
					label.control-label(for="firstName") First Name
					.controls
						input#firstName
				.control-group
					label.control-label(for="lastName") Last Name
					.controls
						input#lastName
				.control-group
					label.control-label(for="emailAddress") Email Address
					.controls
						input#emailAddress
				.control-group
					label.control-label(for="password") Password
					.controls
						input#password(type="password")
				.control-group
					label.control-label(for="lastName") Confirm Password
					.controls
						input#password2(type="password")
				.form-actions
					a#login(href="/login")
						span Existing Users:
						br
						span Click here to login
					button.btn.btn-primary.btn-large(type="submit").right Sign Up

	

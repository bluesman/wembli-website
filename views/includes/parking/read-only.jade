//-
	#parking-price-range.price-range
		.popover-container.pull-left
			i#help1.icon-question-sign.display-popover(placement="right",trigger="hover",animation="true",title="Pick A Price Range",content="Choose a price range to give your friends an idea of how much they can expect to pay for parking.  Mouse over the dollar signs to see each price range then use the checkboxes to pick your options.")
		h3.pull-left PICK YOUR PRICE RANGE:
		form#parking-price-range-form.price-range-form.form-inline
			fieldset.pull-left
				label.checkbox(ng-click="handlePriceRange()",title="LOW: Under $20")
					input#low(type="checkbox",ng-model="priceRange.low")
					span.dollar-sign(ng-class="{true:'orange'}[priceRange.low]") $
				label.checkbox(ng-click="handlePriceRange()",title="MEDIUM: From $20 to $50")
					input#med(type="checkbox",ng-model="priceRange.med")
					span.dollar-sign(ng-class="{true:'orange'}[priceRange.med]") $$
				label.checkbox(ng-click="handlePriceRange()",title="Above $50")
					input#high(type="checkbox",ng-model="priceRange.high")
					span.dollar-sign(ng-class="{true:'orange'}[priceRange.high]") $$$
			a.btn.btn-primary.btn-large.pull-left(ng-hide="backToPlan",href="{{eventOptionsLink}}",direction="1") Continue to Invite Friends
			a.btn.btn-primary.btn-large.pull-left(ng-show="backToPlan",href="/plan",direction="1") Back To The Plan
#parking-list-header-container.parking-list-header-container.list-header-container
	#parking-list-header.list-header
		h4.pull-left Preview parking options near the event
		.popover-container.pull-left
			i.icon-question-sign.display-popover(placement="bottom",trigger="hover",animation="true",title="Preview Parking",content="Get a sneak peek at the kind of parking your price range will get you. Once you know how many people are coming, you'll be able to choose parking.")
	//-
		a.range-header(href="#",ng-click="sortByPrice()") Range
		a.section-header(href="#",ng-click="sortBySection()") Location
		a.qty-header(href="#",ng-click="sortByQty()") Spots Available
		a.distance-header(href="#",ng-click="sortByDistance()") Distance
		a.price-header(href="#",ng-click="sortByPrice()") Price
ul#group-parking-list-container.parking-list-container.list-container
	//- parkwhiz parking
	li.parking-row.row.bounce-map-marker(lat="{{parking.lat}}",lng="{{parking.lng}}",ng-repeat="parking in parkingReservations.parking_listings | filter:{hide:false}",ng-hide="parking.hide")
		.top.clearfix
			.icon.pull-left
				i.icon-truck.icon-flip-horizontal.icon-2x
			.title.pull-left {{parking.location_name}}
		.bottom.clearfix
			.price.pull-left
				.header price
				.value ${{parking.price}}
			.contact.pull-left.clearfix
				.business.pull-left
					.address
						div {{parking.address}}
						div {{parking.city}}, {{parking.state}}
						div {{determineDistance(parking.distance)}} mi.
			.discount.pull-right
				.value {{parking.available_spots}}
				.header spots
	//- google parking
	li.parking-row.row.bounce-map-marker(lat="{{parking.geometry.location.lat()}}",lng="{{parking.geometry.location.lng()}}",ng-repeat="parking in googleParking",ng-hide="parking.hide")
		.top.clearfix
			.icon.pull-left
				i.icon-truck.icon-flip-horizontal.icon-2x
			.title.pull-left {{parking.name}}
		.bottom.clearfix
			.price.pull-left
				.header price
				.value N/A
			.contact.pull-left.clearfix
				.business.pull-left
					.address
						div {{parking.vicinity}}
				.message Online reservations are not available.
				.details
					a.btn.btn-small.parking-more-info(parking="{{parking}}",href="#parking-info-modal") view details





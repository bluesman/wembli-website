#planViewFriendContainer.planViewContainer
	#mainContainer.row
		#eventDetails!= partial("includes/event",{cta:false,rating:false,link:false,event:session.currentPlan.event});
		#left.span8

		#right.span4
			#friendStack.module!= partial("includes/plan-view/friend-stack",{})
			#login.module
				h3 Invitees
					a#inviteesIcon(href="#")
						i.icon-user.pull-right.icon-white
				.body
					.generalError.error.yellow
						- if((typeof errors !== 'undefined') && (errors.general) )
							| Incorrect Email or Password.
						- if((typeof errors !== 'undefined') && (errors.facebook) )
							| Unable to login through facebook.
					form#loginForm.form-vertical.well(method="post",action="/login",enctype="application/x-www-form-urlencoded")
						div(style="text-align:center")
							a#facebookLogin.btn.btn-primary(href="/auth/facebook") Click Here To Login With Facebook
						hr
						strong Login without Facebook:
						br
						br
						input.redirect-url(type="hidden",name="redirectUrl",value="")
						fieldset
							.control-group
								label.control-label(for="email") Email:
								.controls
									input#email(type="text",value=(session.remember ? params.email : null),name="email")
							.control-group
								label.control-label(for="password") Password:
								.controls
									input(type="password",value="",name="password")
							.control-group
								.controls
									input#rememberInput(type="checkbox",name="remember",checked=params.remember)
									label#rememberLabel.control-label(for="remember") Remember Me
							.form-actions
								a#forgotPasswordLink(href="#forgotPasswordModal",data-toggle="modal") forgot your password?
								button#loginSubmitButton.btn.btn-primary.btn-large Login
					a#signupLink(data-toggle="modal",href="#signupModal") New to Wembli? Click here to Sign Up.
			script
				$(document).ready(function() {
					$('#forgotPasswordLink').click(function(e) {
						$('#loginModal').modal('hide');
					});
					$('#loginForm #signupLink').click(function(e) {
						$('#loginModal').modal('hide');
					});
				});
						
			